<div class="form">
  <h1 class="form-title">Editing User</h1>

  <%= render 'form', user: @user %>

  <div class="form-actions">
    <%= link_to 'Show', @user, class: "form-action" %> |
    <% if current_user && current_user.role.name == "admin" %>
      <%= link_to 'Back', users_path, class: "form-action" %>
    <% else %>
      <%= link_to 'Back', root_path, class: "form-action" %>
    <% end %>
  </div>
</div>
