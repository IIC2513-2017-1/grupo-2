<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3" class="actions"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td class="actions">
          <%= link_to user do %>
            <i class="fa fa-eye fa-2x" aria-hidden="true"></i>
          <% end %>
        </td>
        <td class="actions">
          <%= link_to edit_user_path(user) do %>
            <i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i>
          <% end %>
        </td>
        <% if current_user.id != user.id %>
          <td class="actions">
            <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "actions" %>
