<h1>Welcome to Amazing, the best store in the market!</h1>
<h2>Popular products</h2>

<div id="popular-products" class="slider slider1">
  <a href="#" class="control-next">></a>
  <a href="#" class="control-prev"><</a>
  <ul>
    <% @popular_products.each do |product| %>
      <li>
        <% if product.image.file.nil? %>
          <%= link_to product, class: "product-image" do %>
            <%= image_tag("no_image_icon.png", class: 'thumbnail') %>
          <% end %>
        <% else %>
          <%= link_to product, class: "product-image" do %>
            <%= image_tag(product.image.to_s, class: 'thumbnail') %>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

