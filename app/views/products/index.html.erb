<div id="index-title">
  <h1>Products</h1>
  <form class="search" action="" method="GET">
    <input type="text" class="search" name="name" placeholder="Search by name...">
  </form>
</div>

<div id="main-index">
  <%= render 'index_display', products: @products %>
</div>

<br>
<div id="index-actions">
  <% if current_user && current_user.role.name == "admin" %>
    <%= link_to 'New Product', new_product_path, class: "actions" %>
  <% end %>
</div>
