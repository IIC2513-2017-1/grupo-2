<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "Categories*" %>
    <%= f.collection_select(:categories, Category.all, :id, :name, {selected: product.categories.pluck(:id)}, {multiple: true, size: "10%"}) %>
    <p class="paragraph-note">*Hold down the Ctrl (windows) / Command (Mac) key to select multiple options.</p>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :stock %>
    <%= f.number_field :stock %>
  </div>

  <div class="field">
    <%= f.label :offer %>
    <%= f.number_field :offer %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
